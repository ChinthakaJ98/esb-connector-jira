<template xmlns="http://ws.apache.org/ns/synapse" name="updateIssueAssignee">
    <parameter name="issueIdOrKey" description="The ID or key of the issue."/>
    <parameter name="name" description="A String containing the name of assignee."/>
    <parameter name="responseVariable" description="Name of the variable to store operation output"/>
    <parameter name="overwriteBody" description="Replace Message Body with operation output"/>
    <sequence>
        <property name="uri.var.jira.issueId" expression="$func:issueIdOrKey"/>
        <property name="Accept-Encoding" action="remove" scope="transport"/>
        <payloadFactory media-type="json">
            <format>
                {
                "name": "$1"
                }
            </format>
            <args>
                <arg expression="$func:name"/>
            </args>
        </payloadFactory>
        <property name="messageType" value="application/json" scope="axis2"/>
        <filter source="$ctx:jiraBlocking" regex="true">
            <then>
                <call blocking="true">
                    <endpoint>
                        <http method="put"
                              uri-template="{uri.var.jira.url}/rest/api/2/issue/{uri.var.jira.issueId}/assignee"/>
                    </endpoint>
                </call>
            </then>
            <else>
                <call>
                    <endpoint>
                        <http method="put"
                              uri-template="{uri.var.jira.url}/rest/api/2/issue/{uri.var.jira.issueId}/assignee"/>
                    </endpoint>
                </call>
            </else>
        </filter>
    </sequence>
</template>