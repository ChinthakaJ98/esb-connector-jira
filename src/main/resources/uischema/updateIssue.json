{
  "connectorName": "jira",
  "operationName": "updateIssue",
  "title": "Update Jira Issue",
  "help": "Update one or more fields of a Jira issue using its ID or key. The update should be passed in JSON format.",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "configRef",
              "displayName": "Jira Connection",
              "inputType": "connection",
              "allowedConnectionTypes": ["JIRA"],
              "defaultType": "connection.JIRA",
              "defaultValue": "",
              "required": "true",
              "helpTip": "Connection configuration used to access the Jira server."
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Issue Update",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "issueIdOrKey",
              "displayName": "Issue ID or Key",
              "inputType": "stringOrExpression",
              "required": "true",
              "helpTip": "The Jira issue ID or key to update (e.g., 'JRA-123')."
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "issueFields",
              "displayName": "Issue Fields JSON",
              "inputType": "stringOrExpression",
              "required": "true",
              "helpTip": "The JSON object specifying the fields to update. Example: '{\"fields\": {\"summary\": \"New summary\"}}'."
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Operation Result",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "responseVariable",
              "displayName": "Response Variable",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "false",
              "helpTip": "Name of the variable to store the response of the operation."
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "overwriteBody",
              "displayName": "Overwrite Message Body",
              "inputType": "booleanOrExpression",
              "defaultValue": "true",
              "required": "true",
              "helpTip": "Set to true to replace the message body with the operation result."
            }
          }
        ]
      }
    }
  ]
}
