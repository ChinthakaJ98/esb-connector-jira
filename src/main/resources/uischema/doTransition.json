{
  "connectorName": "jira",
  "operationName": "doTransition",
  "title": "Transition Issue",
  "help": "Perform a workflow transition on a Jira issue using its ID or key and transition fields.",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "configRef",
              "displayName": "Jira Connection",
              "inputType": "connection",
              "allowedConnectionTypes": [
                "JIRA"
              ],
              "defaultType": "connection.JIRA",
              "defaultValue": "",
              "required": "true",
              "helpTip": "Connection configuration used to access the Jira server."
            }
          },
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Transition Input",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "issueIdOrKey",
                    "displayName": "Issue ID or Key",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "The ID or key of the Jira issue to be transitioned."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "issueFields",
                    "displayName": "Transition Payload",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "A JSON object specifying the transition ID and optional fields (e.g., { \"transition\": { \"id\": \"31\" } })."
                  }
                }
              ]
            }
          },
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Operation Result",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "responseVariable",
                    "displayName": "Response Variable",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Name of the property to store the operation result."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "overwriteBody",
                    "displayName": "Overwrite Message Body",
                    "inputType": "booleanOrExpression",
                    "defaultValue": "true",
                    "required": "true",
                    "helpTip": "Set to true to replace the current message body with the operation output."
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
