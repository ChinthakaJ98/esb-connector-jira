                }
              ]
            }
          },
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "API Details",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "uri",
                    "displayName": "API URL",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "URI of the Jira instance, e.g., https://<site-url>/"
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
