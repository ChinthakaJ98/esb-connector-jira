{
  "connectorName": "jira",
  "operationName": "createFilter",
  "title": "Create Filter",
  "help": "Create a new Jira filter with specified name, JQL type, description, and favorite setting.",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "configRef",
              "displayName": "Jira Connection",
              "inputType": "connection",
              "allowedConnectionTypes": [
                "JIRA"
              ],
              "defaultType": "connection.JIRA",
              "defaultValue": "",
              "required": "true",
              "helpTip": "Connection configuration used to access the Jira server."
            }
          },
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Filter Details",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "filterName",
                    "displayName": "Filter Name",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "The name of the filter to be created."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "jqlType",
                    "displayName": "JQL Type",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "The issue type to be used in the JQL query. For example, 'Bug'."
